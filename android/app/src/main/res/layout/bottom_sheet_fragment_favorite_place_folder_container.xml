<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_bottom_sheet_folder_favorite_place_folder_catalog_drag_handle"
        android:layout_width="80dp"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@null"
        android:src="@drawable/bg_gray100_radius_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_bottom_sheet_folder_favorite_place_folder_catalog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_sheet_folder_favorite_place_folder_catalog_drag_handle"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>