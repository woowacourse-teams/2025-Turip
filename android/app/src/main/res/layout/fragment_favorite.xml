<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pure_white_ffffff"
    tools:context=".ui.main.favorite.FavoriteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_favorite_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_favorite_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="@id/cl_favorite_toolbar"
            app:layout_constraintTop_toTopOf="@id/cl_favorite_toolbar" />

        <ImageView
            android:id="@+id/iv_favorite_more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:contentDescription="@null"
            android:padding="20dp"
            android:src="@drawable/ic_three_dots_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cl_favorite_toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@color/pure_white_ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_favorite_toolbar"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/gray_300_5b5b5b"
        app:tabIndicatorFullWidth="true"
        app:tabMode="fixed"
        app:tabRippleColor="@null"
        app:tabSelectedTextAppearance="@style/title3"
        app:tabTextAppearance="@style/body2"
        app:tabTextColor="@color/pure_black_151515" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/md_favorite"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        app:dividerColor="@color/gray_100_f0f0ee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tl_favorite" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_favorite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/md_favorite" />

</androidx.constraintlayout.widget.ConstraintLayout>