<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bottom_sheet_folder_favorite_place_drag_handle"
        android:layout_width="80dp"
        android:layout_height="8dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@null"
        android:src="@drawable/bg_gray100_radius_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bottom_sheet_folder_favorite_place_folder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/bottom_sheet_favorite_place_folder_title"
        android:textAppearance="@style/title3"
        android:textColor="@color/pure_black_151515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_bottom_sheet_folder_favorite_place_drag_handle"
        tools:text="폴더 목록" />

    <ImageView
        android:id="@+id/iv_bottom_sheet_folder_favorite_place_add_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_folder_plus"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom_sheet_folder_favorite_place_folder_title"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_bottom_sheet_folder_favorite_place_folder_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_bottom_sheet_favorite_place_folder_folder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/pure_white_ffffff"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bottom_sheet_folder_favorite_place_folder_title"
        tools:listitem="@layout/item_favorite_place_folder" />

</androidx.constraintlayout.widget.ConstraintLayout>