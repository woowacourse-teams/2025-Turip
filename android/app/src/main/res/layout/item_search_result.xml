<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="6dp"
    android:background="@drawable/bg_gray200_radius_24dp">

    <ImageView
        android:id="@+id/iv_search_result_thumbnail"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_search_result_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/title2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_search_result_thumbnail"
        tools:text="느좋 감성 대구 여행 어쩌구.." />

    <TextView
        android:id="@+id/tv_search_result_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/info1"
        android:layout_marginStart="72dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_result_title"
        tools:text="뭉치 · 2024-04-21" />

    <ImageView
        android:id="@+id/iv_search_result_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.76dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="17dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_search_result_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/iv_search_result_thumbnail" />

    <TextView
        android:id="@+id/tv_search_result_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:textAppearance="@style/info1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search_result_location"
        app:layout_constraintStart_toEndOf="@+id/iv_search_result_location"
        tools:text="14개 장소" />

    <ImageView
        android:id="@+id/iv_search_result_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_calendar"
        app:layout_constraintStart_toEndOf="@+id/tv_search_result_location"
        app:layout_constraintTop_toTopOf="@+id/tv_search_result_location" />

    <TextView
        android:id="@+id/tv_search_result_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/info1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search_result_calendar"
        app:layout_constraintStart_toEndOf="@id/iv_search_result_calendar"
        app:layout_constraintTop_toTopOf="@+id/iv_search_result_calendar"
        tools:text="2박 3일" />

</androidx.constraintlayout.widget.ConstraintLayout>