<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="18dp"
    android:background="@drawable/bg_stroke_turip_black_06_radius_24dp"
    android:backgroundTint="@color/turip_light_gray_f2f2f2_50"
    android:paddingVertical="14dp">

    <ImageView
        android:id="@+id/iv_favorite_place_move"
        android:layout_width="18dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:src="@drawable/ic_hamburger"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/gray_400_2b2b2b" />

    <TextView
        android:id="@+id/tv_favorite_place_category"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:textAppearance="@style/title3"
        android:textColor="@color/gray_500_1e1e1e"
        app:layout_constraintStart_toEndOf="@id/iv_favorite_place_move"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="관광지" />

    <TextView
        android:id="@+id/tv_favorite_place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/title1"
        android:textColor="@color/gray_400_2b2b2b"
        app:layout_constraintEnd_toStartOf="@id/iv_favorite_place_map_link"
        app:layout_constraintStart_toStartOf="@id/tv_favorite_place_category"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite_place_category"
        tools:text="경포대 해수욕장경포대 해수욕장경포대 해수욕장경포대 해수욕장" />

    <ImageView
        android:id="@+id/iv_favorite_place_map_link"
        android:layout_width="44dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_favorite_place_favorite"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/iv_favorite_place_favorite"
        app:layout_constraintTop_toTopOf="@id/iv_favorite_place_favorite"
        tools:src="@drawable/btn_kakao_map_basic" />

    <ImageView
        android:id="@+id/iv_favorite_place_favorite"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:contentDescription="@null"
        android:padding="14dp"
        android:src="@drawable/btn_favorite_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
